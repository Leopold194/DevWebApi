{
    "openapi": "3.0.0",
    "info": {
      "title": "API Documentation",
      "version": "1.0.0",
      "description": "API Documentation for Apartments and Users"
    },
    "servers": [
      {
        "url": "http://127.0.0.1:5000/",
        "description": "Local server"
      }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "tags": [
        {
            "name": "Authentication",
            "description": "Endpoints related to authentication"
        },
        {
            "name": "Users",
            "description": "Endpoints related to user management"
        },
        {
            "name": "Apartments",
            "description": "Endpoints related to apartment management"
        },
        {
            "name": "Reservations",
            "description": "Endpoints related to reservation management"
        }
    ],
    "paths": {
      "/v1/login/": {
        "post": {
          "summary": "Login",
          "tags": ["Authentication"],
          "description": "Endpoint to login a user.",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string",
                        "example": "your.email@example.xyz" 
                      },
                      "password": {
                        "type": "string",
                        "example": "yourpassword" 
                      }
                    }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful login."
            }
          }
        }
      },
      "/v1/register": {
        "post": {
            "summary": "Register",
            "tags": ["Authentication"],
            "description": "Endpoint to register a new user.",
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                      "type": "object",
                      "properties": {
                        "firstname": {
                          "type": "string",
                          "example": "John" 
                        },
                        "lastname": {
                          "type": "string",
                          "example": "Smith" 
                        },
                        "email": {
                          "type": "string",
                          "example": "your.email@example.xyz" 
                        },
                        "password": {
                          "type": "string",
                          "example": "yourpassword" 
                        }
                      }
                  }
                }
              }
            },
            "responses": {
                "201": {
                    "description": "Successful registration."
                }
            }
        }
      },
      "/v1/users": {
        "get": {
          "summary": "Get Users",
          "tags": ["Users"],
          "description": "Endpoint to retrieve all users.",
          "responses": {
            "200": {
              "description": "Successful retrieval of users."
            }
          }
        }
      },
      "/v1/users/{user_id}": {
        "delete": {
          "summary": "Delete User",
          "tags": ["Users"],
          "description": "Endpoint to delete a user by ID.",
          "parameters": [
            {
              "name": "user_id",
              "in": "path",
              "description": "ID of the user to delete.",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User deleted successfully."
            }
          }
        },
        "patch": {
          "summary": "Modify User",
          "tags": ["Users"],
          "description": "Endpoint to modify a user by ID.",
          "parameters": [
            {
              "name": "user_id",
              "in": "path",
              "description": "ID of the user to modify.",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User modified successfully."
            }
          }
        }
      },
      "/v1/apartments": {
        "get": {
          "summary": "Get Apartments",
          "tags": ["Apartments"],
          "description": "Endpoint to retrieve all apartments.",
          "responses": {
            "200": {
              "description": "Successful retrieval of apartments."
            }
          }
        },
        "post": {
          "summary": "Add Apartment",
          "tags": ["Apartments"],
          "description": "Endpoint to add a new apartment.",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                      "area": {
                        "type": "string",
                        "example": "Paris" 
                      },
                      "capacity": {
                        "type": "number",
                        "example": 4 
                      },
                      "address": {
                        "type": "string",
                        "example": "242 rue du Faubourg Saint-Antoine" 
                      },
                      "availability": {
                        "type": "boolean",
                        "example": "False" 
                      },
                      "night_price": {
                        "type": "number",
                        "example": 100
                      },
                      "proprio": {
                        "type": "number",
                        "example": 2
                      }
                    }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Apartment added successfully."
            }
          }
        }
      },
      "/v1/apartments/{ap_id}": {
        "delete": {
          "summary": "Delete Apartment",
          "tags": ["Apartments"],
          "description": "Endpoint to delete an apartment by ID.",
          "parameters": [
            {
              "name": "ap_id",
              "in": "path",
              "description": "ID of the apartment to delete.",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Apartment deleted successfully."
            }
          }
        },
        "patch": {
          "summary": "Modify Apartment",
          "tags": ["Apartments"],
          "description": "Endpoint to modify an apartment by ID.",
          "parameters": [
            {
              "name": "ap_id",
              "in": "path",
              "description": "ID of the apartment to modify.",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Apartment modified successfully."
            }
          }
        }
      },
      "/v1/my_aps/": {
        "get": {
          "summary": "Get My Apartments",
          "tags": ["Apartments"],
          "description": "Endpoint to retrieve apartments of the current user.",
          "responses": {
            "200": {
              "description": "Successful retrieval of user's apartments."
            }
          }
        }
      },
      "/v1/availability_change/{ap_id}": {
        "patch": {
          "summary": "Change Availability",
          "tags": ["Apartments"],
          "description": "Endpoint to change availability of an apartment by ID.",
          "parameters": [
            {
              "name": "ap_id",
              "in": "path",
              "description": "ID of the apartment to modify availability.",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Apartment availability changed successfully."
            }
          }
        }
      },
      "/v1/reservations/": {
        "post": {
          "summary": "Add Reservation",
          "tags": ["Reservations"],
          "description": "Endpoint to add a new reservation.",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                      "starting_date": {
                        "type": "string",
                        "example": "2024-03-18" 
                      },
                      "ending_date": {
                        "type": "string",
                        "example": "2024-03-20" 
                      },
                      "apartment": {
                        "type": "number",
                        "example": 1 
                      }
                    }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Reservation added successfully."
            }
          }
        },
        "get": {
          "summary": "Get Reservations",
          "tags": ["Reservations"],
          "description": "Endpoint to retrieve all reservations.",
          "responses": {
            "200": {
              "description": "Successful retrieval of reservations."
            }
          }
        }
      },
      "/v1/reservations/{reserv_id}": {
        "delete": {
          "summary": "Delete Reservation",
          "tags": ["Reservations"],
          "description": "Endpoint to delete a reservation by ID.",
          "parameters": [
            {
              "name": "reserv_id",
              "in": "path",
              "description": "ID of the reservation to delete.",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Reservation deleted successfully."
            }
          }
        },
        "patch": {
          "summary": "Modify Reservation",
          "tags": ["Reservations"],
          "description": "Endpoint to modify a reservation by ID.",
          "parameters": [
            {
              "name": "reserv_id",
              "in": "path",
              "description": "ID of the reservation to modify.",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Reservation modified successfully."
            }
          }
        }
      }
    }
  }
  
